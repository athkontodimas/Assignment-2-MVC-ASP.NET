                    <div class="dropdown-menu" style="">
                        <a class="dropdown-item" href="#">@Html.ActionLink("All Students", "ShowStudents", "Student")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink( "Enrolled students in courses", "ShowStudentsPerCourse", "Course")</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Add Student</a>
                        <a class="dropdown-item" href="#">Edit Student</a>
