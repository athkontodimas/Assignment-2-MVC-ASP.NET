                    <div class="dropdown-menu" style="">
                        <a class="dropdown-item" href="#">@Html.ActionLink("All Courses", "ShowCourses", "Course")</a>
                       
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Add Course", "Create", "TestCourses")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Edit Course", "Edit", "TestCourses")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Delete Course", "Delete", "TestCourses")</a>
                    </div>
                </li>
                @*---------------------------------------------------------*@
                @*DROPDOWN MENU ASSIGNMENTS*@
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Assignments</a>
                    <div class="dropdown-menu" style="">
                        <a class="dropdown-item" href="#">@Html.ActionLink("All Assignments", "ShowAssignments", "Assignment")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Assignments per course", "ShowAssignmentsPerCourse", "Course")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Assignments per course for each student", "AllStudentAssignments", "StudentAssignment")</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Add Assignment", "Create", "TestAssignments")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Edit Assignment", "Edit", "TestAssignments")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Delete Assignment", "Delete", "TestAssignments")</a>
                    </div>
                </li>
